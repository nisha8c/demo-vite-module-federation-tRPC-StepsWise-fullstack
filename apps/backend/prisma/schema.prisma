generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  steps     Int      @default(0)
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  USER
}

model Settings {
  id                String   @id @default(cuid())
  stepThreshold     Int      @default(100)
  moneyPerThreshold Float    @default(10)
  updatedAt         DateTime @updatedAt
}
